<%layout('layout/boilerplate')%>
  <div class="login-app">
			<form action="/login" method="POST" class="needs-validation" novalidate>
  				<div class="mb-3">
    				<label for="exampleInputUsername1" class="form-label">Username</label>
    				<input type="email" class="form-control" id="exampleInputUsername1" aria-describedby="emailHelp" name="username">
    				<div id="emailHelp" class="form-text" style="color: #CF6679; opacity: 0.9;">We'll never share your email with anyone else.</div>
  				</div>
 	 			<div class="mb-3">
    				<label for="exampleInputPassword1" class="form-label">Password</label>
    				<input type="password" class="form-control" id="exampleInputPassword1" name="password">
  				</div>
  				<button type="submit" class="submit-button">Log In</button>
			</form>
		</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
</body>
</html>