<%layout('layout/boilerplate')%>
  <div class="login-app">
			<form action="/signup" method="POST" class="needs-validation" novalidate>
  				<div class="mb-3">
    				<label for="exampleInputEmail1" class="form-label" required>Email Address</label>
    				<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" required>
    				<div id="emailHelp" class="form-text" style="color: #CF6679; opacity: 0.9;">We'll never share your email with anyone else.</div>
  				</div>
          <div class="mb-3">
            <label for="exampleInputUsername1" class="form-label">Username</label>
            <input type="text" class="form-control" id="exampleUsername1" name="username" required>
          </div>
 	 			  <div class="mb-3">
    				<label for="exampleInputPassword1" class="form-label">Password</label>
    				<input type="password" class="form-control" id="exampleInputPassword1" name="password" required>
  				</div>
  				<button type="submit" class="submit-button">Log In</button>
			</form>
		</div>
  <script type="text/javascript" src="/js/productForm.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>